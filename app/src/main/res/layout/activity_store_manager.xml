<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgadmin"
    android:padding="20dp"
    tools:context=".Admin.StoreManager">
    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Đăng Xuất"
        android:textSize="15sp"
        android:id="@+id/btndangxuat"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:backgroundTint="#9C27B0"/>
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY STORE"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_item"
        android:backgroundTint="#9CCC65"
        android:text="BÁO CÁO DOANH THU CỬA HÀNG"
        android:textColor="#283593"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Tổng số đơn đã đặt"
            android:textColor="#283593"
            android:background="@drawable/background_item"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:padding="5dp"
            android:gravity="start"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/sodon"
            android:gravity="start"
            android:textSize="25sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Tổng doanh thu"
        android:textColor="#283593"
        android:backgroundTint="@color/white"
        android:background="@drawable/background_item"
        android:textStyle="bold"
        android:padding="5dp"
        android:gravity="start"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="5dp"
        android:id="@+id/tongdoanhthu"
        android:layout_gravity="center"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Danh sách sản phẩm đã đặt"
        android:textColor="#283593"
        android:background="@drawable/background_item"
        android:textStyle="bold"
        android:padding="5dp"
        android:backgroundTint="@color/white"
        android:id="@+id/itemStore"
        android:gravity="start"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Chi tiết đơn đặt hàng"
        android:textColor="#283593"
        android:background="@drawable/background_item"
        android:textStyle="bold"
        android:padding="5dp"
        android:backgroundTint="@color/white"
        android:id="@+id/detailStore"
        android:gravity="start"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Phản hồi của khách hàng"
        android:textColor="#283593"
        android:background="@drawable/background_item"
        android:textStyle="bold"
        android:padding="5dp"
        android:backgroundTint="@color/white"
        android:id="@+id/complainStore"
        android:gravity="start"
        android:textSize="25sp"/>
</LinearLayout>