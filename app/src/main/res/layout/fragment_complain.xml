<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgadmin"
    android:padding="10dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FE724C"
        android:gravity="center"
        android:textStyle="bold"
        android:text="GỬI PHẢN HỒI"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:textSize="20sp"
        android:id="@+id/txtphanhoi"
        android:padding="5dp"
        android:gravity="clip_horizontal"
        android:hint="Thêm mô tả..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="220dp"
        android:backgroundTint="#FE724C"
        android:text="Xác Nhận"
        android:textSize="15sp"
        android:id="@+id/phanhoi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#FE724C"
        android:text="HỦY"
        android:textSize="15sp"
        android:id="@+id/huyphanhoi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</androidx.constraintlayout.widget.ConstraintLayout>